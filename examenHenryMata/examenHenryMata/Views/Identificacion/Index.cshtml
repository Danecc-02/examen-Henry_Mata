@model IEnumerable<examenHenryMata.Models.Identificacion>

@{
    ViewData["Title"] = "Identificaciones";
}

<H3>Identificaciones</H3>

<div class="row search">
    <div class="col-auto">
        <input type="text" class="form-control-plaintext" id="txt-search" placeholder="Buscar..." />
    </div>
    <div class="col-auto">
        <a class="btn btn-secondary" onclick="Informacion_search_search()" id="search-link"><i class="fas fa-search"></i></a>
        <a asp-action="Create" class="btn btn-success"><i class="far fa-file"></i> Nuevo</a>
    </div>
</div>
<br />


<p>
    <a asp-action="Create" class="btn btn-dark">AGREGAR NUEVA</a>

    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdentificacionNombres)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdentificacionNombres)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.IdentificacionId">Editar</a>
                        <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.IdentificacionId">Detalles</a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.IdentificacionId">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</p>

<script src="~/js/Informacion.js" asp-append-version="true"></script>


